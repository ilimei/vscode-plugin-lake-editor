{
  "name": "lake-editor",
  "displayName": "lake-editor",
  "description": "use yuque editor edit local lake file and lakebook viewer",
  "version": "0.0.5",
  "publisher": "hugehardzhang",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.58.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "preset": "node ./scripts/preset-editor.js",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-typescript": "^7.14.5",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.58.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.7.3",
    "eslint": "^7.27.0",
    "file-loader": "^6.2.0",
    "glob": "^7.1.7",
    "less-loader": "^11.1.0",
    "mini-css-extract-plugin": "^2.7.5",
    "mocha": "^10.2.0",
    "raw-loader": "^4.0.2",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "urllib": "^3.21.0",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "vscode-nls": "^5.2.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ]
  },
  "activationEvents": [
    "onCustomEditor:lakeEditor.lakeEditor"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "lakeEditor.lakeEditor",
        "displayName": "lake-editor",
        "priority": "default",
        "selector": [
          {
            "filenamePattern": "*.{lake}"
          }
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Lake Editor",
      "properties": {
        "lakeEditor.showToolbar": {
          "type": "boolean",
          "default": true,
          "description": "显示工具栏"
        },
        "lakeEditor.paragraphSpacing": {
          "type": "boolean",
          "default": false,
          "description": "段间距开启"
        },
        "lakeEditor.defaultFontSize": {
          "type": "number",
          "default": 15,
          "description": "默认字体大小",
          "enum": [
            12,
            13,
            14,
            15,
            16,
            19,
            22,
            24,
            29,
            32,
            48
          ]
        }
      }
    }
  },
  "repository": "git@github.com:ilimei/vscode-plugin-lake-editor.git"
}
